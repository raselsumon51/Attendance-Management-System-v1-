<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .teacher-panel-left ul li{
      background-color: rgb(89, 89, 103);
      margin-bottom: 10px !important;
      color: white;
    }
   
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row mb-md-4" style="background-color: #343a40; color: white;">

      <div class="col-md-9">
        <h5 class="py-md-3 text-center">
          <span class="fs-md-5 text-lime-500">Attendance Management System</span>
        </h5>
      </div>
      <div class="col-md-3">
        <h5 class="text-end py-md-3 pe-md-4 logout"><a class="btn btn-info "
            href="/admin-dashboard/logout">Logout</a></h5>
      </div>
    </div>

    <div class="row teacher-panel-left">
      <div class="col-md-3 pt-md-2 text-center ps-md-3 pt-md-4 " style="background-color: rgb(4, 3, 5); height: 85vh;">
        <ul class="list-unstyled ">
          <li class="text-md-center py-md-2" >
            <a href="/admin-dashboard/upload-teachers" class="text-white  text-decoration-none">Add Teacher</a>
          </li>
          <li class="text-lg-center  py-md-2">
            <a href="/admin-dashboard/add-course"
              class="text-white text-decoration-none">Add Course</a>
          </li>
          <li class="text-lg-center  py-md-2">
            <a href="/admin-dashboard/teachers-assigned-courses" class=" text-white text-decoration-none">
              Assigned Courses
            </a>
          </li>
          <li class="text-lg-center  py-md-2">
            <a href="/admin-dashboard/teachers"
              class="text-white text-decoration-none">Teachers</a>
          </li>
          <li class="text-lg-center  py-md-2">
            <a href="/admin-dashboard/assign-course-teacher" class="text-white text-decoration-none">Assign Course
              Teacher</a>
          </li>
        </ul>
      </div>

      <div class="col-md-8 py-md-2">
        <%- body %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
