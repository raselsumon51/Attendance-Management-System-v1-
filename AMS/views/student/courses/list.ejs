<div class="container" style="height: 600px; overflow: auto;">
  <div class="row justify-content-center">
    <div class="col-12 section-common section-common-padding">
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <td class="text-center text-white fs-5 mb-2">Course Name 1</td>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course=> { %>
            <tr>
              <td>
                <a href="/students-dashboard/attendance/courses/<%= course._id %>" class="btn btn-link" style="text-decoration: none;">
                  <%= course.name %>
                </a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>