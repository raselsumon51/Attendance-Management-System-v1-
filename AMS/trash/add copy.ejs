<div class="container ">
  <div class="row justify-content-center" >
    <div class="col-md-11 ">
      <% if (saved) { %>
        <div class="bg-white py-md-3" id="success">
          <div class="text-center text-dark">
            <span>Teachers has been successfully added!</span>
            <button style="color: wheat !important;;font-size: 15px; " type="button" class="btn-close btn-sm btn-primary pe-2" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
        <% } %>
      <div class=" p-md-4 rounded" >
        <h2 class="text-center mb-md-4 ">Upload Excel File  </h2>
        <form action="/admin-dashboard/teacher-upload" method="post" enctype="multipart/form-data">
          <div class="mb-md-3">
            <label for="teacher_file" class="form-label">Upload Excel File</label>
            <input type="file" class="" name="teacher_file" accept=".xlsx,.xls" required>
          </div>
          <div class="d-flex justify-content-center ">
            <button type="submit" class="btn btn-primary">Upload</button>
          </div>
        </form>
        <p  class="text-center" ><a href="/admin-dashboard/add-teachers-manually" style="text-decoration: none;">Add Teacher manually?</a></p>
      </div>
    </div>
  </div>
</div>

<script>
  const closeButton = document.querySelector(".btn-close");
  const successAlert = document.getElementById("success");

  function closeSuccessMessage() {
    let opacity = 1;

    const animationInterval = setInterval(() => {
      opacity -= 0.05; // Decrease opacity in small steps
      successAlert.style.opacity = opacity;

      if (opacity <= 0) {
        successAlert.style.visibility = "hidden";
        clearInterval(animationInterval); // Stop the animation
      }
    }, 20); // Adjust the duration as needed (20ms = 50fps)
  }

  closeButton.addEventListener("click", () => {
    closeSuccessMessage();
  });
</script>
